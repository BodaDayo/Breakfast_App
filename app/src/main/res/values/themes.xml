<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.BreakfastApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/pink_500</item>
        <item name="colorPrimaryVariant">@color/pink_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/white_200</item>
        <item name="colorSecondaryVariant">@color/white</item>
        <item name="colorOnSecondary">@color/gray_500</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins</item>

        <item name="colorError">@color/gray_700</item>
        <item name="colorOnError">@color/white</item>
        <item name="colorSurface">@color/white_200</item>
        <item name="colorOnSurface">@color/gray_500</item>
        <item name="android:colorBackground">@color/white_700</item>
        <item name="colorOnBackground">@color/gray_500</item>

        <!-- Customize button. -->
        <item name="materialButtonStyle">@style/SecondaryButton</item>

    </style>

</resources>